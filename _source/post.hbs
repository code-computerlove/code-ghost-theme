{{!< default}}

{{#post}}
{{#if image}}
<div class="c-banner" style="background-image: url({{image}});">
	<div class="c-banner__image o-wrapper"></div>
</div>
{{/if}}
<div class="o-wrapper">
	<main role="main">
	    <article>

	        <header>
	            <h1 class="post-title">{{title}}</h1>
	            <section class="c-meta">
	                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
					{{#foreach tags}}{{#if @first}} in {{/if}}<a href="{{url}}" title="{{name}}" class="c-meta__link">{{name}}</a>{{#unless @last}}, {{/unless}}{{/foreach}}
	            </section>
	        </header>

	        <section>
	            {{content}}
	        </section>

	        <footer class="o-layout c-author">
	        {{#author}}
	            <section class="o-grid">
		            {{#if image}}
		            <figure class="o-grid__item o-layout__left c-author__photo u-1/4 u-1/6@md u-1/8@lg">
		                <a href="{{url}}" class=" c-author__img"><img src="{{image}}" alt="{{name}}'s Picture"></a>
		            </figure>
		            {{/if}}
					<div class="o-grid__item o-layout__left c-author__details u-3/4 u-5/6@md4 u-7/8@lg">
		                <h4 class="c-author__name"><a href="{{url}}">{{name}}</a></h4>
						<p class="c-author__bio">
		                {{#if bio}}{{bio}}<br>{{/if}}
						{{#if location}}<a href="https://twitter.com/{{location}}" class="c-author__link">@{{location}}</a>{{/if}}
						</p>
					</div>
	            </section>

	        {{/author}}
	        </footer>

	    </article>
	</main>
</div>

{{/post}}
