{{! This is the post loop - each post will be output using this markup }}

{{! First loop to get the featured posts}}
{{#foreach posts}}
	{{#if featured}}
	<article class="c-post{{#if image}} o-layout@post_float o-grid@post_float{{/if}}">
		{{#if image}}
		<div class="o-layout__left@post_float o-grid__item@post_float u-2/3@post_float">
			<div class="c-post__image c-post__image--{{id}}" style="background-image: url({{@image}});"></div>
		</div>
		{{/if}}
		<div class="c-post__content o-layout__left@post_float o-grid__item@post_float u-1/3@post_float">
			<div class="c-author--brief">
				{{#if author.image}}
				<span class=" c-author__img c-author__img--thumb"><img src="{{author.image}}" alt="{{author.name}}"></span>
				{{/if}}
				{{author}}
				{{tags prefix=" on "}}
				<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
			</div>
			<header>
				<h2 class="c-post__title"><a href="{{url}}">{{{title}}}</a></h2>
			</header>
			<section>
				<p>{{excerpt words="26"}}&hellip;</p>
			</section>
		</div>
	</article>
	{{/if}}
{{/foreach}}

