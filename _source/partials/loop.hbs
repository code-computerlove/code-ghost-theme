{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="c-post{{#if image}} o-layout@post_float o-grid@post_float{{/if}}">
	{{#if image}}
	<div class="o-layout__left@post_float o-grid__item@post_float u-1/3@post_float">
		<div class="c-post__image c-post__image--{{id}}"></div>
		<!-- @if NODE_ENV='dev' --><style>
			.c-post__image--{{id}} { background-image: url({{@image}}); }
		</style><!-- @endif -->
		<!-- @if NODE_ENV='prod' --><style>
			.c-post__image--{{id}} { background-image: url(/resized/xs{{@image}}); }
			@media screen and (min-width: 20.0625em) { .c-post__image--{{id}} { background-image: url(/resized/sm{{@image}}); } }
			@media screen and (min-width: 20.0625em) and (min-resolution: 144dpi), screen and (min-width: 20.0625em) and (min-device-pixel-ratio: 1.5) { .c-post__image--{{id}} { background-image: url(/resized/sm@2x{{@image}}); } }
		</style><!-- @endif -->
	</div>
	{{/if}}
	<div{{#if image}} class="o-layout__left@post_float o-grid__item@post_float u-2/3@post_float"{{/if}}>
		<header>
			<h2 class="c-post__title"><a href="{{url}}">{{{title}}}</a></h2>
		</header>
		<section>
			<p>{{excerpt words="26"}}&hellip;</p>
		</section>
		<footer class="c-author--brief">
			{{#if author.image}}
				<span class=" c-author__img c-author__img--thumb"><!-- @if NODE_ENV='dev' --><img src="{{author.image}}" alt="{{author.name}}"><!-- @endif --><!-- @if NODE_ENV='prod' --><img src="/resized/sq/xs{{author.image}}" alt="{{author.name}}"><!-- @endif --></span>
			{{/if}}
			{{author}}
			{{tags prefix=" on "}}
			<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
		</footer>
	</div>
</article>
{{/foreach}}

