{{! This is the post loop - each post will be output using this markup }}

{{! First loop to get the featured posts}}
{{#foreach posts}}
	{{#if featured}}
	<article class="c-post o-layout@post_float o-grid@post_float {{#unless image}}u-1/2@post_float u-1/3@post_float_wide{{/unless}}">
		{{#if image}}
		<div class="o-layout__left@post_float o-grid__item@post_float u-2/3@post_float">
			<div class="c-post__image c-post__image--featured c-post__image--{{id}}" style="background-image: url({{@image}});"></div>
		</div>
		{{/if}}
		<div class="c-post__content c-post__content--featured o-layout__left@post_float o-grid__item@post_float u-1/3@post_float">
			<div class="c-author--brief">
				{{author prefix="By "}}
				<time datetime="{{date format='YYYY-MM-DD'}}"> &ndash; {{date format="DD MMMM YYYY"}}</time>
				<span class="c-author__tags"> &ndash; {{tags}}</span>
			</div>

			<header>
				<h2 class="c-post__title"><a href="{{url}}">{{{title}}}</a></h2>
			</header>

			<section>
				<p>{{excerpt words="40"}}&hellip;</p>
				<a href="{{url}}" class="c-post__link">Read more</a>
			</section>
		</div>
	</article>
	{{/if}}
{{/foreach}}

{{! Second loop to get the normal posts}}
{{#foreach posts}}
 {{#unless featured}}
	<article class="c-post o-layout__left@post_float o-grid__item@post_float u-1/2@post_float u-1/3@post_float_wide">
		{{#if image}}
		<div>
			<div class="c-post__image c-post__image--{{id}}" style="background-image: url({{@image}});"></div>
		</div>
		{{/if}}
		<div class="c-post__content">
			<div class="c-tags">{{tags}}</div>
			<header>
				<h2 class="c-post__title"><a href="{{url}}">{{{title}}}</a></h2>
			</header>

			<div class="c-author--brief">
				{{author}}
				<time datetime="{{date format='YYYY-MM-DD'}}"> &ndash; {{date format="DD MMMM YYYY"}}</time>
			</div>

			<section>
				<p>{{excerpt words="40"}}&hellip;</p>
				<a href="{{url}}" class="c-post__link">Read more</a>
			</section>
		</div>
	</article>
	{{/unless}}
{{/foreach}}

